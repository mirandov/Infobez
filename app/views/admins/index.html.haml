.page-header
  %h1= t('headers.admins.index')

%table.table.table-hover
  %caption
    = link_to new_admin_path, class: 'btn btn-success' do
      = fa_icon :plus
      = t('buttons.new.admin')

%br
%br
%table.table.table-hover.sortable
  %thead
    %tr
      %th= Admin.human_attribute_name(:fio)
      %th
      %th


  %tbody
    - @admins.each do |admin|
      %tr
        %td= admin.first_name + " " + admin.second_name + " " + admin.patronymic
        %td
          = link_to admin, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_admin_path(admin), class: 'btn btn-info' do
            = fa_icon :edit
          
